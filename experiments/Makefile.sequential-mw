SHELL := /bin/bash
INSTANCES := $(shell cut -d' ' -f1 instances.txt)
TIMEOUT := 3600
ALGORITHMS := sequential-mw sequential-mw-lgd
POWERS := 2 3 4
STACK_SPACE := 10485760
RESULTS := results

all : $(foreach i, $(INSTANCES), $(foreach a, $(ALGORITHMS), $(foreach p, $(POWERS), $(RESULTS)/$(a)-$(p)/$i.out )))

dir-% :
	mkdir -p $(RESULTS) $(RESULTS)/$*

$(RESULTS)/sequential-mw-2/%.out : | dir-sequential-mw-2
	ulimit -s $(STACK_SPACE) ; ../code/solve_max_clique --mw --timeout $(TIMEOUT) $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f2 ) --format $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f3 ) --power 2 > >(tee $@ )

$(RESULTS)/sequential-mw-lgd-2/%.out : | dir-sequential-mw-lgd-2
	ulimit -s $(STACK_SPACE) ; ../code/solve_max_clique --mw --timeout $(TIMEOUT) $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f2 ) --format $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f3 ) --lgd --power 2 > >(tee $@ )

$(RESULTS)/sequential-mw-3/%.out : | dir-sequential-mw-3
	ulimit -s $(STACK_SPACE) ; ../code/solve_max_clique --mw --timeout $(TIMEOUT) $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f2 ) --format $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f3 ) --power 3 > >(tee $@ )

$(RESULTS)/sequential-mw-lgd-3/%.out : | dir-sequential-mw-lgd-3
	ulimit -s $(STACK_SPACE) ; ../code/solve_max_clique --mw --timeout $(TIMEOUT) $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f2 ) --format $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f3 ) --lgd --power 3 > >(tee $@ )

$(RESULTS)/sequential-mw-4/%.out : | dir-sequential-mw-4
	ulimit -s $(STACK_SPACE) ; ../code/solve_max_clique --mw --timeout $(TIMEOUT) $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f2 ) --format $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f3 ) --power 4 > >(tee $@ )

$(RESULTS)/sequential-mw-lgd-4/%.out : | dir-sequential-mw-lgd-4
	ulimit -s $(STACK_SPACE) ; ../code/solve_max_clique --mw --timeout $(TIMEOUT) $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f2 ) --format $(shell grep "^`basename $*` " < instances.txt | cut -d' ' -f3 ) --lgd --power 4 > >(tee $@ )

